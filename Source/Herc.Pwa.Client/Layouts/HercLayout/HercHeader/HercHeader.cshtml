@inherits BaseComponent
<header id="@Id" class="row px-4">
  <div class="col-3">
    <Account />
  </div>
  <div class="col mx-auto text-center">
    <NavLink class="nav-link mt-0 d-flex" href="/" Match=NavLinkMatch.All>
      <HercLogo />
    </NavLink>
  </div>
  <div class="col-3">
    <div class="row">
      <div class="ml-auto">
        <IconBar IconFillColor="@ColorPalette.HercSanMarino" />
      </div>
    </div>
    <div class="row">
      <div class="ml-auto">
        <Search />
      </div>
    </div>
  </div>
</header>

<style>
  #@Id {
    background-color: @ColorPalette.HercPrussianBlue;
    border-bottom: 1px solid @ColorPalette.HercLightGray;
    color: white;
  }
</style>